+    status = "okay";
+    port {
+        mipi1_sensor_ep: endpoint1 {
+            remote-endpoint = <&ov5640_mipi1_ep>;
+            data-lanes = <1 2>;
+        };
+
+        csi1_mipi_ep: endpoint2 {
+            remote-endpoint = <&csi1_ep>;
+        };
+    };
+};
+
+&csi1_bridge {
+    fsl,mipi-mode;
+    fsl,two-8bit-sensor-mode;
+    status = "okay";
+
+    port {
+        csi1_ep: endpoint {
+            remote-endpoint = <&csi1_mipi_ep>;
+        };
+    };
